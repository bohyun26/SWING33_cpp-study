#include <iostream>  
using namespace std;

int main() {

	int num;

	cout << "**기차 예약 시스템**\n";
	cout << "1.좌석 예약 시스템\n";
	cout << "2.예약 변경\n";
	cout << "3.프로그램 종료\n";
	cout << "번호를 입력하세요 : ";
	cin >> num;

	cout << endl;

	cout << "1 2      3 4  (1호차 )\n";
	cout << "-------------\n";
	for (int i = 0; i < 5; i++) {
		cout << "0 0      0 0\n";
	}
	cout << "-------------\n";

	cout << "1 2      3 4  (2호차 )\n";
	cout << "-------------\n";
	for (int i = 0; i < 5; i++) {
		cout << "0 0      0 0\n";
	}
	cout << "-------------\n";

	cout << "1 2      3 4  (3호차 )\n";
	cout << "-------------\n";
	for (int i = 0; i < 5; i++) {
		cout << "0 0      0 0\n";
	}
	cout << endl;

	cout << "성인(25000원): ";
	cin >> num;

	cout << endl;

	cout << "청소년(18000원): ";
	cin >> num;

	cout << endl;




	cout << endl << "몇호차를 예약 하시겠습니까?" << endl;
	cin >> num;
	if (num > 3) {
		cout << "예약가능한 호차가 아닙니다." << endl << "몇호차를 예약	하시겠습니까?" << endl;
		cin >> num;
	}

	cout << "몇 열, 몇번째 좌석을 예약하시겠습니까?" << endl;
	cin >> num;


	if (num > 5) {
		cout << "예약가능한 좌석이 아닙니다." << endl << "몇 열, 몇번째 좌석을 예약하시겠습니까?" << endl;
		cin >> num;
	}
	if (num <= 5) {
		cout << "예약되었습니다" << endl;
	}

	cout << endl;



	cout << "**기차 예약 시스템**\n";
	cout << "1.좌석 예약 시스템\n";
	cout << "2.예약 변경\n";
	cout << "3.프로그램 종료\n";
	cout << "번호를 입력하세요 :";
	cin >> num;


	cout << endl;

	cout << "1 2      3 4  (1호차 )\n";
	cout << "-------------\n";
	for (int i = 0; i < 5; i++) {
		cout << "0 0      0 0\n";
	}
	cout << "-------------\n";

	cout << "1 2      3 4  (2호차 )\n";
	cout << "-------------\n";
	for (int i = 0; i < 5; i++) {
		cout << "0 0      0 0\n";
	}
	cout << "-------------\n";

	cout << "1 2      3 4  (3호차 )\n";
	cout << "-------------\n";
	for (int i = 0; i < 5; i++) {
		cout << "0 0      0 0\n";
	}
	cout << endl;

	cout << "바꿀 좌석의 갯수를 입력하세요 : ";
	cin >> num;

	cout << "현재 좌석과 바꿀 좌석을 입력하세요" << endl;
	cout << "현재 좌석 (H호차, N열, M번째) : ";
	cin >> num >> num >> num;
	cout << "변경 좌석 (H호차, N열, M번째) : ";
	cin >> num >> num >> num;

	cout << "변경되었습니다." << endl;

	cout << "현재 좌석과 바꿀 좌석을 입력하세요" << endl;

	cout << "현재 좌석 (H호차, N열, M번째) : ";
	cin >> num >> num >> num;

	cout << "변경 좌석 (H호차, N열, M번째) : ";
	cin >> num >> num >> num;

	cout << "변경되었습니다." << endl;


	cout << "1 2      3 4  (1호차 )\n";
	cout << "-------------\n";
	for (int i = 0; i < 5; i++) {
		cout << "0 0      0 0\n";
	}
	cout << "-------------\n";

	cout << "1 2      3 4  (2호차 )\n";
	cout << "-------------\n";
	for (int i = 0; i < 5; i++) {
		cout << "0 0      0 0\n";
	}
	cout << "-------------\n";

	cout << "1 2      3 4  (3호차 )\n";
	cout << "-------------\n";
	for (int i = 0; i < 5; i++) {
		cout << "0 0      0 0\n";
	}
	cout << endl;
}
